// Main Window Background Color
Ti.UI.setBackgroundColor("#000");

//Data
var vessels = [{title: "Carriers"}, {title: "Cruisers"}, {title: "Destroyers"}, {title: "Frigates"}, {title: "Submarines"}];
var submarines =[{title: "Attack"}, {title: "Boomer"}, {title: "Guided Missile"}, {title: "Deep Submergence"}];
var mainWindow = Ti.UI.createWindow ({
	backgroundColor: "#f5f5f5"
});

var titleView = Ti.UI.createView ({
	height: 65,
	backgroundColor: "#fff",
	top: 0
});

var border = Ti.UI.createView ({
	backgroundColor: "#dbdbdb",
	height: 1,
	top: titleView.height + titleView.top
});

var titleLabel = Ti.UI.createLabel({
	text: "Navy Vessels",
	font: {fontSize: 20, fontFamily: "Arial", fontWeight: "bold"},
	top: 30,
	width: "100%",
	textAlign: "center"
});

var navy = Ti.UI.createTableView ({
	top: border.top + border.height
});

if(Ti.Platform.name === "iPhone OS" ){
	navy.style = Ti.UI.iPhone.TableViewStyle.GROUPED;
}

//setData method

navy.setData(vessels);


titleView.add(titleLabel);
mainWindow.add(titleView, border, navy);
mainWindow.open();
